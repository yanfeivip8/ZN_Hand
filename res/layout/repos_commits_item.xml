<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_repos_commits_item_icon"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/resps_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/iv_repos_commits_item_icon"
        android:orientation="vertical"
        android:weightSum="4" >

        <TextView
            android:id="@+id/tv_repos_commits_update_changelog"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0sp"
            android:text="@string/update"
			android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0sp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_repos_commits_item_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/anonymous"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:text="@string/author"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_repos_commits_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>